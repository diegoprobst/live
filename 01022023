var
opcao: literal
valor: real
inicio
valor <- 0

repita
   escreval("Digite 1 para converter quilômetros em metros")
   escreval("Digite 2 para converter metros cúbicos em litros")
   escreval("Digite 3 para sair")
   leia (opcao)
   se opcao = "1" entao
      escreval("Digite o valor em quilômetros a ser convertido em metros")
      leia (valor)
      valor <- valor * 1000
      escreval(valor / 1000, " quilômetro(s) equivale(m) a", valor, " metro(s)")
   senao
      se opcao = "2" entao
         escreval("Digite o valor em metros cúbicos a ser convertido em litros")
         leia (valor)
         valor <- valor * 1000
         escreval(valor / 1000, " metro(s)cúbico(s) equivale(m) a", valor, " litro(s)")
      fimse
   fimse
ate opcao = "3"
escreval("Você encerrou a sessão")
fimalgoritmo
