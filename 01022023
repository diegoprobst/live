var
opcao: literal
quilometros, metros, metroscub, litros: real
inicio
quilometros <- 0
metros <- 0
metroscub <- 0
litros <- 0

repita
   escreval("Digite 1 para converter quilômetros em metros")
   escreval("Digite 2 para converter metros cúbicos em litros")
   escreval("Digite 3 para sair")
   leia (opcao)
   se opcao = "1" entao
      escreval("Digite o valor em quilômetros a ser convertido em metros")
      leia (quilometros)
metros <- quilometros * 1000
      escreval(quilometros, " quilômetro(s) equivale(m) a", metros, " metro(s)")
   senao
      se opcao = "2" entao
         escreval("Digite o valor em metros cúbicos a ser convertido em litros")
         leia (metroscub)
 litros <- metroscub * 1000
         escreval(metroscub, " metro(s)cúbico(s) equivale(m) a", litros, " litro(s)")
      fimse
   fimse
ate opcao = "3"
escreval("Você encerrou a sessão")
fimalgoritmo
